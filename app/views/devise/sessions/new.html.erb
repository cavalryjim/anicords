<section class="border_top full_page">
	
 <div class="row">
  <h4>Welcome Back</h4>
  <div class="large-8 columns">
   <fieldset>
	
	  
	 <div class="large-12 columns">
      
       <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="row collapse">
		  <div class="small-9 columns">
		    <h4>user login</h4>
		  </div>
		</div>
    
        <div class="row collapse">
          <div class="small-7 columns">
            <%= f.text_field :email, autofocus: true, placeholder: "email address" %>	
          </div>
      
        </div>
 
        <div class="row collapse">
          <div class="small-7 columns">
            <%= f.password_field :password, placeholder: "password" %> 
        	
          </div>
          <div class="small-5 columns">
            <small><%= link_to "  Forgot password?", new_user_password_path %>	</small>
          </div>
         </div>
  
         <div class="row">
          <div class="small-12  columns ">
            <label for="user_remember_me">
      	      <%= f.check_box :remember_me %> 
      	      <span class="custom checkbox"></span> 
      	      Remember me
            </label>
          </div>
          	
         </div>
 
         <div class="row collapse">
          <div class="small-12 columns">
	    
            <%= f.submit "login", class: "button small" %>
            or 
            <%= link_to "sign up", new_user_registration_path + "#login" %>
            or use 
            <%= link_to image_tag(s3_url('webicon-facebook-m.png')), user_omniauth_authorize_path(:facebook), class: "fc-webicon" %>
          </div>
         </div>
   
       <% end %>
	  </div>
     
   </fieldset>
  </div>
 </div>
</section>
