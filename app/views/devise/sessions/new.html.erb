<section class="main_content_section">
  <div class="row bottom_padding_5">
	<div class="large-8 columns">
	  <div class="row">
	    <div class="large-7 large-centered columns">
	    	<h2 class="welcome_header">WELCOME BACK</h2>
	    </div>
	  </div>
	    
	  <div class="row">
	    <div class="large-6 large-centered columns">
	    	<%= image_tag 'frontpic4.jpg', class: 'picture_border_2'%>
	    </div>
	  </div>
	  	
	 </div>
	  
	 <div class="large-4 columns">
      
       <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="row collapse">
		  <div class="small-9 columns">
		    <h4>user login</h4>
		  </div>
		</div>
    
        <div class="row collapse">
          <div class="small-6 columns">
            <%= f.text_field :email, autofocus: true, placeholder: "email address" %>	
          </div>
      
        </div>
 
        <div class="row collapse">
          <div class="small-6 columns">
            <%= f.password_field :password, placeholder: "password" %> 
        
          </div>
          <div class="small-6 columns">
            <small><%= link_to "Forgot password?", new_user_password_path %>	</small>
          </div>
         </div>
  
         <div class="row">
          <div class="small-6  columns ">
            <label for="user_remember_me">
      	      <%= f.check_box :remember_me %> 
      	      <span class="custom checkbox"></span> 
      	      Remember me
            </label>
          </div>
          <div class="small-3 columns">
            <%= link_to image_tag('webicon-facebook-m.png'), user_omniauth_authorize_path(:facebook), class: "fc-webicon" %>
          </div>
          <div class="small-3 columns"></div>
      	
         </div>
 
         <div class="row collapse">
          <div class="small-6 columns">
	    
            <%= f.submit "Login" %>
            or 
            <%= link_to "sign up", new_user_registration_path %>
          </div>
         </div>
   
       <% end %>

     </div>
  </div>
</section>
