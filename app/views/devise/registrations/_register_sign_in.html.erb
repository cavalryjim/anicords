<div class="row">
  
  <div class="large-6 columns">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "no_bg"} ) do |f| %>
         <div class="row collapse">
		  <div class="small-12 columns">
		    <h4>already have an account</h4>
		  </div>
		</div>
		
		
	     <div class="row collapse">
		   <div class="small-8 columns">
		     <%= f.text_field :email, placeholder: "email address" %>
		   </div>
		 </div>
	      
	     <div class="row collapse">
		   <div class="small-8 columns">
		     <%= f.password_field :password, placeholder: "password", 'required' => :required %> 
		   </div>
		 </div>
		 
		 <div class="row collapse">
		   <div class="small-4 columns">
		     <label for="user_remember_me">
      	       <%= f.check_box :remember_me %> 
      	       <span class="custom checkbox"></span> 
      	       Remember me
             </label>
		   </div>
		   <div class="small-8 columns">
		     <small><%= link_to "Forgot password?", new_user_password_path %>	</small>
		   	
		   </div>
		 </div>
		 
          
         <div class="row collapse bottom_padding_10">
		    <div class="small-4 columns"><%= f.submit "Login", class: "small button" %></div>
		 </div> 
     
    <% end %>
  </div>
  
  <div class="large-6 columns">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  
		<div class="row collapse">
		  <div class="small-12 columns">
		    <h4>create an account</h4>
		  </div>
		</div>
		
		<div class="row collapse">
		  <div class="small-8 columns">
		    <%= f.email_field :email, autofocus: true, placeholder: 'email address' %>
		  </div>
		</div>
		
		<% if f.object.password_required? %>
		  <div class="row collapse">
		      
		    <div class="small-8 columns">
		      <%= f.password_field :password, placeholder: 'password (6 or more characters)', 'required' => :required  %>
		    </div>
		  </div>
		
		  <div class="row collapse">
		    <div class="small-8 columns">
		      <%= f.password_field :password_confirmation, placeholder: 'password confirmation', 'required' => :required %>
		    </div>
		  </div>
	    <% end %>
		  
		  <div class="row collapse bottom_padding_10">
		    <div class="small-4 columns"><%= f.submit "Sign up", class: "small button" %> </div>
		  </div>
    <% end %>	
  </div>
  
</div>   