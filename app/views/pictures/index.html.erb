<section class="border_top">
  <div class="row">
	<fieldset>
	  <h4>Pictures</h4>
	  <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
	    <% for picture in @animal.pictures %>
		  <li>
		  	
	    	<%= image_tag picture.image, class: 'th' %>
	    	<%= link_to image_tag('cross.png', :alt => "del"), '#', confirm: 'Are you sure?' %>
		  </li>
		  
	    <% end %>
	  </ul>
	  
		
	  <%= direct_upload_form_for @uploader do |f| %>
		<div class="row">
	      <div class="large-8 columns">
		    <%= f.file_field :image, class: 'upload_picture' %>
		  </div>
		</div>
		  
		<div class="actions">       
		  <%= f.submit 'Upload photo' %>
		</div>
	  <% end %>
	
	<%= link_to 'back', @animal.owner %>
	</fieldset>
  </div>
</section>
