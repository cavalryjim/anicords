<html ng-app="Dooliddl">
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? ("DooLittl | " + yield(:title)) : "DooLiddl" %></title>
	<link rel="shortcut icon" href="http://anicords.herokuapp.com/doo_fav.png" />
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  	<%= render 'layouts/header' %>
	
	<%= devise_error_messages! %>
	<% flash.each do |name, msg| %>
	  <div class="alert-box <%= name == :notice ? "success" : "alert" %>" data-alert> 
		  <%= msg %>
          <a href="" class="close">&times;</a>
	  </div>
    <% end %>

  
    <section class="green_background">
        <%= yield %>
    </section>
    
    <section class="black_background border_top">
      <%= render 'layouts/footer' %>
    </section>
    
    <!-----------------------#JDavis: modals follow------------------------------->
    
    <% if !user_signed_in? %>
    	
	    <div id="registerSigninModal" class="reveal-modal">
	  
		  <%= render 'devise/registrations/register_sign_in'%>
		  
		  <a class="close-reveal-modal">&#215;</a>
		</div>
	<% end %>
	
	<div id="contactModal" class="reveal-modal">
	  <%= render 'layouts/contact'%>
	  <a class="close-reveal-modal">&#215;</a>
	</div>
	<div id="aboutModal" class="reveal-modal">
	  <%= render 'layouts/about'%>
	  <a class="close-reveal-modal">&#215;</a>
	</div>
	<div id="betaCommentModal" class="reveal-modal">
	  <%= render 'layouts/beta_comment'%>
	  <a class="close-reveal-modal">&#215;</a>
	</div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
