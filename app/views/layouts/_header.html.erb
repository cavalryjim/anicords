<section class="petabyt_image_bar">
	<%= link_to_home %>
</section>

<nav class="top-bar" data-options="is_hover:true">
  <ul class="title-area">
    <li class="name"></li>
      
	<!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section no_bg">
  	
  	
    <ul class="right no_bg">
	  <% if user_signed_in? %>
	    <li class="has-dropdown notifications">
	      <%= link_to('#') do %>
	        <% if number_of_notifications %>
	         <div class="notifications">
               <div class="notifications_text"><%= number_of_notifications %></div>
	         </div>
	        <% else %>
	         <%= image_tag s3_url('white-flag-icone-6376-48.png'), size: '25x25' %>
            <% end %>
          <% end %>
	    
	    
	    
	      <ul class="dropdown"> 
	      	<%= raw user_notifications %>	
	      </ul>
	    </li>
	    <li class="has-dropdown"><%=link_to image_tag(s3_url('persona-person-white.png'), size: '25x25'), '#' %>
	      <ul class="dropdown"> 	
		    <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
		  	<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>	
	        <li><a href="#"> <%= current_user.name_or_email %></a></li>
	      </ul>
	    </li>
	  <% else %>
              
		<li> 
	  	  <%= link_to image_tag(s3_url('uporin.png'), size: '140x140', class: 'selectable_image'), "#", "data-reveal-id" => "registerSigninModal", class: "no_padding" %>
	    </li>
		
		<li><%= link_to image_tag(s3_url('orusef.png'), size: '140x140', class: 'selectable_image'), user_omniauth_authorize_path(:facebook), class: "no_padding" %></li>
		
	  <% end %>
	</ul>
  </section>
</nav> 
