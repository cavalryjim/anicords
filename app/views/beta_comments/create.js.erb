<% if @beta_comment.persisted? %>
  $("form#beta_comment_form").on("ajax:success", function(event, data, status, response) {
    $(".reveal-modal").foundation('reveal', 'close');
    $(this)[0].reset();
    $(this).effect("highlight", {color:"#81F781"}, 1500).unbind();
    //alert("Thanks for the note!");
  }).on("ajax:error", function(event, response, error) {
    alert("There was a problem.  Please try again later.");
  });
<% else %>  
  alert("Please leave a comment or join our mailing list");
<% end %>
