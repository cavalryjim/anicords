$("form.animal_association_form").on("ajax:success", function(event, data, status, response) {
  $('.animal_association_form').foundation('reveal', 'close');
  $('#animal_provider_table_div').html('<%= j render("animals/provider_table") %>');
  $('#provider_table').effect("highlight", {color:"#81F781"}, 1500).unbind();
  $(".flash_alert").removeClass("hidden");
  $(".flash_alert").show().delay(2000).fadeOut();
  $("section.disabled").removeClass("disabled");
  
}).on("ajax:error", function(event, response, error) {
  return alert("There was a problem.  Please try again later.");
});


