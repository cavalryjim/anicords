	       <label for='<%=dom_id(service)%>'>
		     <%= check_box_tag "service_provider[service_ids][]", service.id, service_selected(@service_provider, service.id), id: dom_id(service) %>
		     <span class="custom checkbox"></span>
		     <%= service.name %>
		   </label>
