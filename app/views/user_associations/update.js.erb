$(".reveal-modal").foundation('reveal', 'close');

<% if @household.present? %>
  $("#members_div").html('<%= j render("households/members") %>');
  $(".member_fieldset").effect("highlight", {color:"#81F781"}, 1500).unbind();
  
  $("#sitters_div").html('<%= j render("households/sitters_table") %>');
  $("#sitters_div").effect("highlight", {color:"#81F781"}, 1500).unbind();
<% end %>

<% if @organization.present? %>
  $("#personnel_div").html('<%= j render("organizations/personnel") %>');
  $(".personnel_fieldset").effect("highlight", {color:"#81F781"}, 1500).unbind();
<% end %>