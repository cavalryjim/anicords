<section class="border_top">
  <div class="row">
	<fieldset>
	  <div class="row">
	  	<div class="large-9 columns">
	  	  <h4><%=@animal.name%></h4>
	  	</div>
	  	<div class="large-3 columns">
		  <div class="hidden flash_alert alert-box success"  data-alert> 
			  Animal information saved.
			  <a href="" class="close">&times;</a>
		  </div>
		</div>
	  </div>
	  <div id='animal_form_div'><%= render 'form' %></div>
	  
	  <%= link_to 'Delete this record', household_animal_path(@owner, @animal), 
						:confirm => "Select 'OK' to delete this animal. All system records will be lost.", method: :delete%>
	</fieldset>
	
	<%= link_to 'Back', @animal.owner %>
  </div>
</section>

<div id="addVaccinationModal" class="reveal-modal">
    <h3>Add vaccination</h3>
	<%= form_for [@animal, AnimalVaccination.new], remote: true, html: {id: 'animal_vaccination_form', "data-abide" => ''} do |f| %>
	  <div class="row">
	    <div class="large-11 columns">
	      <%= f.text_field :vaccination_id  %>
	    </div>
	  </div>
	    
	  <div class="row">
	    <div class="large-6 columns">
	      <%= f.text_field :vaccination_date, class: "datepicker" %>
	      <small class="error">Vaccination date required.</small>
	    </div>
	  </div>
	  
	  <%= f.hidden_field :animal_id, value: @animal.id %>  
	  
	  <div class="actions">
	    <%= f.submit "Add vaccination" %>
	  </div>
	  
	<% end %>
	  
	<a class="close-reveal-modal">&#215;</a>
</div>

<div id="addAnimalProviderModal" class="reveal-modal">
    <h3>Add Service Provider</h3>
	<%= form_for [@animal, AnimalAssociation.new], remote: true, html: {id: 'animal_association_form', "data-abide" => ''} do |f| %>
	  <div class="row">
	    <div class="large-11 columns">
		  <%= f.text_field :service_provider_id %>
	    </div>
	  </div>
	    
	  
	  <%= f.hidden_field :animal_id, value: @animal.id %>  
	  
	  <div class="actions">
	    <%= f.submit "Add provider" %>
	  </div>
	  
	<% end %>
	  
	<a class="close-reveal-modal">&#215;</a>
</div>