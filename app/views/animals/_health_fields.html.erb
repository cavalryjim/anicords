<div class="row">
  <div class="large-4 columns">
	<%= f.label :weight %>
	<%= f.text_field :weight %>
  </div>
  <div class="large-8 columns"></div>
</div>

<div class="row">
		      
  <div class="large-6 columns">
	<%= f.label :health_certification %>
	<%= link_to(image_tag('Icon-Document03-Blue.png', size: '20x20'), @animal.health_certification.url, target: '_blank') if @animal.health_certification? %>
	<%= f.file_field :health_certification %>
		        
	<% if @animal.health_certification? %>
	  <label>
		<%= f.check_box :remove_health_certification %>
		Remove health certification
	  </label>
	<% end %>

  </div>
  <div class="large-6 columns">
  </div>
		      	      
</div>