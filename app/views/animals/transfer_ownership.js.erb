
<% if @success %>
  $('.reveal-modal').foundation('reveal', 'close');
  $("#animal<%=@animal.id.to_s%>").removeClass("th").addClass("transfer");
  <% if @household.present? %>
    $('#anmials_section_div').html('<%= j render("households/animals_listing") %>')
  <% end %>
<% else %>
  $("#transfer_error").removeClass("hidden");
