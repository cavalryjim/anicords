<%= form_for [@owner, @animal] do |f| %>
  
	<div class="section-container auto" data-section>
	  <section>
	    <p class="title" data-section-title><a href="#panel1">Demographics</a></p>
	    <div class="content" data-section-content>
	      
		    <div class="row">
		      <div class="large-8 columns">
		        <%= f.label :name %>
		        <%= f.text_field :name %>
		      </div>
		    </div>
		    
		    <div class="row">
		      <div class="large-4 columns">
		        <%= f.label :type %>
		        <%= f.collection_select :animal_type_id, AnimalType.all, :id, :name %>
		      </div>
		      <div class="large-4 columns">
		        <%= f.label :breed %>
		        <%= f.text_field :breed %>
		      </div>
		      <div class="large-4 columns"></div>
		    </div>
		    
		    <div class="row">
		      <div class="large-2 columns">
		        <%= f.label :weight %>
		        <%= f.text_field :weight %>
		      </div>
		      <div class="large-4 columns">
		      	<%= f.label :dob %>
		        <%= f.date_field :dob %>
		      </div>
		      <div class="large-4 columns"></div>
		    </div>
		    
		    <div class="row">
		      <div class="large-12 columns">
		        <%= f.label :description %>
		        <%= f.text_area :description %>
		      </div>
		    </div>
	    </div>
	  </section>
	  <section>
	    <p class="title" data-section-title><a href="#panel2">Documents</a></p>
	    <div class="content" data-section-content>
	      
	    </div>
	  </section>
	  
	  <section>
	    <p class="title" data-section-title><a href="#panel2">Medical</a></p>
	    <div class="content" data-section-content>
	      
	    </div>
	  </section>
	</div>

    
    
    
    <div class="actions">
      <%= f.submit %>
    </div>
  

  <% if @owner.class.name == 'Household'%>
    <%= f.hidden_field :household_id, value: @owner.id %>
  <% end %>
  <% if @owner.class.name == 'Breeder'%>
    <%= f.hidden_field :breeder_id, value: @owner.id %>
  <% end %>
<% end %>
