<% if @organization %>
	$("form#organization_animal_form").on("ajax:success", function(event, data, status, response) {
	  $(".flash_alert").removeClass("hidden");
	  $(".flash_alert").show().delay(2000).fadeOut();
	  $(this).effect("highlight", {color:"#81F781"}, 1500);
	  $("#org_animal_table_div").html('<%= j render("organizations/animal_table") %>');
	  $('#animal_table').dataTable({
	    "sPaginationType": "foundation",
	    "bStateSave": true
	  }).show();
	}).on("ajax:error", function(event, response, error) {
	  return alert("There was a problem.  Please try again later.");
	});
<% else %>
	$("form#animal_form").on("ajax:success", function(event, data, status, response) {
	  $(this).effect("highlight", {color:"#81F781"}, 1500);
	  $(".flash_alert").removeClass("hidden");
	  $(".flash_alert").show().delay(2000).fadeOut();
	  $("section.disabled").removeClass("disabled");
	}).on("ajax:error", function(event, response, error) {
	  return alert("There was a problem.  Please try again later.");
	});
<% end %>




  
