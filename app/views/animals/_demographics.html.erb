<div class="row">
  <div class="large-8 columns">
	<%= f.text_field :name, placeholder: "Animal's name" %>
	<small class="error">Name required.</small>
  </div>
</div>
		    
<div class="row">
  <div class="large-8 columns">
	<%= f.text_field :show_name, placeholder: "Animal's show name" %>
  </div>
</div>
		    
<div class="row">
  <div class="large-4 columns">
	<%= f.label :type, 'Species' %>
	<%= f.collection_select :animal_type_id, AnimalType.all, :id, :name %>
  </div>
  <div class="large-4 columns">
	<%= f.label :breed %>
	<%= f.text_field :breed %>
  </div>
  <div class="large-4 columns"></div>
</div>
		    
<div class="row">
  <div class="large-4 columns">
	<%= f.label :dob %>
	<%= f.date_field :dob %>
  </div>
  <div class="large-8 columns"></div>
</div>
		    
<div class="row">
		      
  <div class="large-4 columns file_class">
	<%= f.label :pedigree %>
	<%= link_to(image_tag('Icon-Document03-Blue.png', size: '20x20'), @animal.pedigree.url, target: '_blank') if @animal.pedigree? %>
	<%= f.file_field :pedigree %>
		        
	<% if @animal.pedigree? %>
	  <label>
		<%= f.check_box :remove_pedigree, class: 'remove_file' %>
		Remove pedigree
	  </label>
	<% end %>

  </div>
  <div class="large-4 columns">
  	<%= f.text_field :registration_number, placeholder: "registration number" %>
  </div>
  
  <div class="large-4, columns"></div>
		      	      
</div>
		    
<div class="row">
  <div class="large-12 columns">
	<%= f.label :description %>
	<%= f.text_area :description %>
  </div>
</div>