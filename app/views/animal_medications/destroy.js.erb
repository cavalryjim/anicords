<% if @heartworm %>
  $("#animal_heartworm_table_div").html('<%= j render("animals/heartworm_table") %>')
  $('#heartworm_fieldset').effect("highlight", {color:"#81F781"}, 1500).unbind();
<% else %>
  $("#animal_medication_table_div").html('<%= j render("animals/medication_table") %>')
  $('#medication_fieldset').effect("highlight", {color:"#81F781"}, 1500).unbind();
<% end %>

$(".flash_alert").removeClass("hidden");
$(".flash_alert").show().delay(2000).fadeOut();
$("section.disabled").removeClass("disabled");
