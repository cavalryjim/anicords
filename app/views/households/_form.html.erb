

<%= form_for(@household) do |f| %>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :name, class: "right inline"  %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="row collapse">
    <div class="small-3 columns">
      
      <%= f.label :address1, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :address1 %>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :address2, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :address2 %>
    </div>
  </div>
  
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :city, class: "right inline"  %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :city %>
    </div>
  </div>
  
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :state, class: "right inline"  %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :state %>
    </div>
  </div>
  
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :zip, class: "right inline"  %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :zip %>
    </div>
  </div>
  
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :phone, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :phone %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
