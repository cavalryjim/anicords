<div class="panel callout radius center no_highlight">
  <div class="row">
    <div class="columns large-6 small-6">
	  <%= thumbnail(animal, '100x100', '', 'Household') %>
	  <h6><%= animal.name %></h6>
	  <p><small><%= animal.breed_names%></small></p>
	  
	  <% if animal.qr_code.present? %>
        <%= image_tag( animal.qr_code.url, size: '50x50', class: 'th', id: 'qr_code_img' ) %>
        <div id="largeQRCode" class="fouc" title= "<%= animal.name%>'s QR Code">
		  <p>This is a downloadable QR code.</p>
		  <p align="center">
		    <%= link_to image_tag( animal.qr_code.url, size: '100x100', class: 'picture_border_3'), animal.qr_code.remote_url %> 
		  </p>
		  
		</div>
      <% end %>
	  
	</div>
	
	<div class="columns large-6 small-6">
	  
  	    <%= link_to button_small("edit"), edit_household_animal_path(@household, animal) %>
  		<%= link_to button_small("medical record (pdf)"), household_animal_path(@household, animal, format: "pdf"), target: '_blank' %>
		<%= link_to button_small("photo gallery"), animal_pictures_path(animal) %>
		<%= link_to button_small("sitter instructions"), animal_sitter_instructions_path(animal, format: "pdf"), target: '_blank' %>
		<% if animal.pending_transfer? %>
          <%= link_to button_small("cancel transfer"), "#", remote: true %>
        <% else %>
          <%= link_to button_small("transfer ownership"), "#", "data-reveal-id" => "transferAnimalModal", remote: true %>
        <% end %>
		
      
	  
	</div>
  </div>
</div>

