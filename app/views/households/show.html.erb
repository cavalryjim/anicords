

<p>
  <strong>Name:</strong>
  <%= @household.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Breed</th>
      <th>Weight</th>
      <th>Description</th>
      
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @household.animals.each do |animal| %>
      <tr>
        <td><%= link_to animal.name, household_animal_path(@household, animal) %></td>
        <td><%= animal.animal_type %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.weight %></td>
        <td><%= animal.description %></td>
        
        <td><%= link_to 'Edit', edit_household_animal_path(@household, animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	
<%= link_to "Add Animal", new_household_animal_path(@household) %> |

<%= link_to 'Edit Household', edit_household_path(@household) %> 

