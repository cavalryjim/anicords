<% content_for :title, "Update Profile" %>

<%= form_for(@user) do |f| %>

  <fieldset>
    <legend>Profile</legend>

    <div class="row">
      <div class="large-5 columns">
      	<%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="large-6 columns">
      	<%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
      	<%= f.label :address1 %>
        <%= f.text_field :address1 %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-12 columns">
      	<%= f.label :address2 %>
        <%= f.text_field :address2 %>
      </div>
    </div>
    
    <div class="row">
      <div class="large-4 columns">
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "City" %>
      </div>
      <div class="large-2 columns">
        <%= f.label :state  %>
        <%= f.select :state, us_states %>
      </div>
      <div class="large-4 columns">
        <%= f.label :zip %>
        <%= f.text_field :zip, placeholder: "Zip" %>
       
      </div>
      <div class="large-2 columns"></div>
    </div>
    
    <div class="row">
      <div class="large-4 columns">
        <%= f.label :phone %>
        <%= f.text_field :phone, placeholder: "123-123-1234" %>
      </div>
      <div class="large-4 columns">
        <%= f.label :email  %>
        <%= f.text_field :email %>
      </div>
      <div class="large-4 columns">
       
      </div>
      
    </div>
    
    <div class="row">
	  <div class="large-4 columns">
	   <table>
	      <thead>
	        <tr>
	          <th min-width="200" colspan="2">Associations</th>
	        </tr>
	      </thead>
	
	      <tbody>
	        <% @user.associations.each do |association| %>
	          <tr>
	            <td><%= link_to image(association), association.organization %></td>   
	            <td><%= link_to association.name, association.organization %></td>       
	          </tr>
	        <% end %>
	      </tbody>
	    </table>
	  </div>
	</div>
    
    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
  
<% end %>
