<fieldset>
  <legend>Organizational users</legend>	
  <div class="row">
    <div class="large-10 columns">
	      	
	  <table>
	    <thead>
	      <tr>
	      	<th></th>
	        <th>Name</th>
	        <th>Email</th>
	        <th>Phone</th>
	        <th>Roles</th>
	        <th></th>
	      </tr>
	    </thead>
	
	   <tbody>
	     <% @organization.user_associations.each do |ua| %>
	       <tr>
	         <td><%= link_to 'edit', edit_user_user_association_path(ua.user, ua), "data-reveal-id" => "editUserModal", remote: true  %></td>
	         <td><%= ua.user.name%></td>
	         <td><%= ua.user.email %></td>
	         <td><%= ua.user.phone %></td>
	         <td><%= ua.user.group_roles(@organization, true) %></td>
	         <td>
	           <% if ua.user != current_user %>
	             <%= link_to image_tag('cross.png', alt:"del", size: '20x20'), organization_user_association_path(@organization, ua), method: :delete, 
				   data: { confirm: 'Please confirm you want to remove ' + ua.user.name_or_email + ' from this account.' } %>
				<% end %>
	          </td>
	        </tr>
	      <% end %>
	            
	    </tbody>
	  </table>
	  <div class="bottom_padding_1em"><%= link_to button_small('add member'), '#', "data-reveal-id" => "addUserModal" %> </div>
	</div>
  </div>
    
</fieldset>
