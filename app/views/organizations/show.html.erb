<% content_for :title, "Animal Organization" %>
<section class="border_top">
	
 <div class="row">
  <fieldset>
  	
  <h4><%= @organization.name %> <small><%= link_to ' (edit)', edit_organization_path(@organization), 'data-no-turbolink' => true %></small></h4>
  <div class="large-12 columns">
	<fieldset>
	  <% if @organization.animals.count == 0 %>
	    <h4>Tell us about your animals</h4>
      <% end %>
      
      <div class="row">
       <div class="large-12 columns">
       	
	    
	    <table id="animal_table" class="fouc" >
		  <thead>
			<tr>
			  <th>Name</th>
			  <th>Species</th>
			  <th>Breed</th>
			  <th>Date In</th>
			  <th>Intake Reason</th>
			  <th>Location</th>
			  <th>Gender</th>
			  <th>Neutered/Spayed</th>
			  <th>Transfer</th>
			</tr>
		  </thead>
		  <tbody>
		    <% @animals.each do |animal| %>
		      <tr>
			    <td><%= link_to animal.name, edit_organization_animal_path(@organization, animal), "data-reveal-id" => "animalModal", remote: true %></td>
			    <td><%= animal.species %></td>
			    <td><%= animal.breed %></td>
			    <td><%= mo_da_yr(animal.org_profile.intake_date) %></td>
			    <td><%= animal.org_profile.intake_reason %></td>
			    <td><%= location(animal) %></td>
			    <td>male</td>
			    <td>yes</td>
			    <td><%= link_to button_small("transfer"), organization_animal_path(@organization, animal), "data-reveal-id" => "transferAnimalModal", remote: true %></td>
			  </tr>
			<% end %>
		  </tbody>
		</table>
       </div>
      </div>
			
	    <%= link_to "Add Animal", new_organization_animal_path(@organization), "data-reveal-id" => "animalModal", remote: true %> 
	</fieldset>
   </div>
  </fieldset>
 </div>
 
</section>


<div id="animalModal" class="reveal-modal">
  <div id="org_animal_div" class="org_animal_div"></div>
  
  <a class="close-reveal-modal">&#215;</a>
</div>

<div id="editAnimalModal" class="reveal-modal">
  <div id="org_animal_edit_div" class="org_animal_div"></div>
  
  <a class="close-reveal-modal">&#215;</a>
</div>

<div id="transferAnimalModal" class="reveal-modal">
  <div id="animal_transfer_div"></div>
  
  <a class="close-reveal-modal">&#215;</a>
</div>
